
<PageManager>:
    LoginPage:
        name: "login"
    NewAccountPage:
        name: "newaccount"
    HomePage:
        name: "home"
    WrongScreen:
        name: "wrong"

<LoginPage>:
    BoxLayout:
        orientation:"vertical"
        spacing: 5
        Label:
            text: "Login page."
        Button:
            size_hint: .3, .1
            text: "Don't have an account?"
            on_release: root.switch_screen()
        BoxLayout:
            orientation: "vertical"
            TextInput:
                id: user
                size_hint: 0.5, 0.1
                pos_hint: {"center_y": .5}
                pos_hint: {"center_x": .5}
            TextInput:
                id: password
                size_hint: 0.5, 0.1
                hint_text: "Input Password"
                pos_hint: {"center_y": .5}
                pos_hint: {"center_x": .5}
            Button:
                pos_hint: {"center_x": .5}
                size_hint: .5 , .2
                text: "Enter"
                on_release: root.get_logged_in(password.text, user.text)

<NewAccountPage>:
    BoxLayout:
        orientation:"vertical"
        spacing: 5
        Label:
            text: "Make a new account page."
        Button:
            size_hint: .3, .1
            text: "Have an account?"
            on_release: root.switch_screen()
        BoxLayout:
            orientation: "horizontal"
            StackLayout:
                orientation: "rl-tb"
                spacing: "10dp"
                #Label:
                  #  text: 'You must have at least 8 characters\nYou must have at least 1 number.\nYou must have at least 1 uppercase letter.\nYou must have at least 1 lowercase letter.\nYou must have at least 1 "special" character.\nYou have a space in your password\nMake sure you didn't make a new line and they are exactly the same'
                    #pos_hint: {"center_y": 0}
                    #pos_hint: {"x": .5}
                    #size_hint: 0.5, 0.01
            BoxLayout:
                orientation: "vertical"
                TextInput:
                    id: newname
                    hint_text: "New Account Name"
                    size_hint: 0.5, 0.1
                    pos_hint: {"center_y": .5}
                    pos_hint: {"center_x": .5}
                TextInput:
                    id: newpass
                    hint_text: "Enter new password"
                    size_hint: 0.5, 0.1
                    pos_hint: {"center_y": .5}
                    pos_hint: {"center_x": .5}
                TextInput:
                    id: secondenter
                    hint_text: "Re-enter password"
                    size_hint: 0.5, 0.1
                    pos_hint: {"center_y": .5}
                    pos_hint: {"center_x": .5}
                Button:
                    pos_hint: {"center_x": .5}
                    size_hint: .5 , .2
                    text: "Enter"
                    on_release: root.answer_question(newpass.text,secondenter.text,newname.text)


<WrongScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: "5"
        Label:
            text: "WRONG"
        Button:
            text: "Skip -->"
            on_release: root.next()

<HomePage>:
    BoxLayout:
        orientation: "vertical"
        spacing: "5"
        Label:
            text: "You have logged in!"
        Button:
            text: "Logout -->"
                on_release: root.switch_screen()

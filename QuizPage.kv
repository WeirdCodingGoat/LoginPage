
<QuizManager>:
    Question1Screen:
        name: "question1"
    Question2Screen:
        name: "question2"
    CorrectScreen:
        name: "correct"
    WrongScreen:
        name: "wrong"


<Question1Screen>:
    BoxLayout:
        orientation:"vertical"
        spacing: 5
        Label:
            text: "Was there a 1985 Batman?"
        BoxLayout:
            Button:
                text: "Yes"
                on_release: root.answer(True)
            Button:
                text: "No"
                on_release: root.answer(False)

<Question2Screen>:
    BoxLayout:
        orientation:"vertical"
        spacing: 5
        Label:
            text: "What year did The Amazing Spider-Man come out?"
        BoxLayout:
            orientation: "vertical"
            TextInput:
                size_hint: 0.5, 0.1
                pos_hint: {"center_y": .5}
                pos_hint: {"center_x": .5}
            Button:
                pos_hint: {"center_x": .5}
                size_hint: .5 , .2
                text: "Enter"


<WrongScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: "5"
        Label:
            text: "WRONG"
        Button:
            text: "Skip -->"

<CorrectScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: "5"
        Label:
            text: "CORRECT"
        Button:
            text: "Next -->"
